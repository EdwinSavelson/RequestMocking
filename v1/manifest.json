{
    "manifest_version": 2,
    "name": "GraphQL Monitor",
    "version": "1.0",
    "description": "Monitor GraphQL requests",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html"
    
    }
  }
  